<div class="player-info-wrapper">
  <div class="player-info-container">
    <div class="player-pic">
      <%= image_tag("default-player-img.png") %>
    </div>
    <ul class="player-info">
      <li><h3 class="player-info-name"><%= @player.full_name %></h3></li>
      <li><span class="player-info-team"><%= @player.team.name %></span></li>
    </ul>
  </div>
</div>
<div class="player-stats-container">
  <div class="game-logs-container">
    <h2 class="game-logs-header">Game Logs</h2>
    <table class="game-logs">
      <thead>
        <tr>
          <th>Season</th>
          <th>Week</th>
          <th>Team</th>
          <th>Opp</th>
          <th>Rush Att</th>
          <th>Rush Yds</th>
          <th>Rush TD</th>
          <% if @player.position == 'QB' %>
                <th>Pass Att</th>
                <th>Pass Comp</th>
                <th>Pass Yds</th>
                <th>Pass TD</th>
              </tr>
            </thead>
            <tbody>
              <% @matchups.each do |matchup| %>
                <tr>
                  <td><%= matchup.period.year %></td>
                  <td><%= matchup.period.week %></td>
                  <td><%= matchup.player.team.std_abbr %></td>
                  <td><%= matchup.team.std_abbr %></td>
                  <td><%= matchup.offensive_result.rushing_att %></td>
                  <td><%= matchup.offensive_result.rushing_yds %></td>
                  <td><%= matchup.offensive_result.rushing_td %></td>
                  <td><%= matchup.offensive_result.passing_att %></td>
                  <td><%= matchup.offensive_result.passing_comp %></td>
                  <td><%= matchup.offensive_result.passing_yds %></td>
                  <td><%= matchup.offensive_result.passing_td %></td>
                </tr>
              <% end %>
            </tbody>
          <% else %>
                  <th>Tar</th>
                  <th>Rec</th>
                  <th>Rec Yds</th>
                  <th>Rec TDs</th>
                </tr>
              </thead>
              <tbody>
                <% @matchups.each do |matchup| %>
                  <tr>
                    <td><%= matchup.period.year %></td>
                    <td><%= matchup.period.week %></td>
                    <td><%= matchup.player.team.std_abbr %></td>
                    <td><%= matchup.team.std_abbr %></td>
                    <td><%= matchup.offensive_result.rushing_att %></td>
                    <td><%= matchup.offensive_result.rushing_yds %></td>
                    <td><%= matchup.offensive_result.rushing_td %></td>
                    <td><%= matchup.offensive_result.receiving_tar %></td>
                    <td><%= matchup.offensive_result.receiving_rec %></td>
                    <td><%= matchup.offensive_result.receiving_yds %></td>
                    <td><%= matchup.offensive_result.receiving_td %></td>
                  </tr>
                <% end %>
              </tbody>
          <% end %>
    </table>
  </div>
  <div class="moving-average">

  </div>
</div>
